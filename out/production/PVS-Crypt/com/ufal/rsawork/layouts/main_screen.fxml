<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<GridPane fx:controller="com.ufal.rsawork.controllers.MainController" prefHeight="400.0" prefWidth="600.0"
            xmlns:fx="http://javafx.com/fxml">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <JFXButton fx:id="generateKey" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" onAction="#generateKeyAction" prefHeight="27.0" prefWidth="103.0" style="-fx-background-color: #fff; -fx-border-radius: 5; -fx-border-color: #e0e0e0;" text="Gerar Key" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets bottom="70.0" left="60.0" />
            </GridPane.margin>
        </JFXButton>
        <JFXButton fx:id="encriptKey" alignment="CENTER" buttonType="RAISED" contentDisplay="CENTER" onAction="#encryptKeyAction" prefHeight="27.0" prefWidth="104.0" style="-fx-background-color: #fff; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" text="Encriptar" textAlignment="JUSTIFY" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="60.0" top="2.0" />
            </GridPane.margin>
        </JFXButton>
        <JFXButton fx:id="desencriptKey" buttonType="RAISED" onAction="#desencryptKeyAction" prefHeight="27.0" prefWidth="106.0" style="-fx-background-color: #fff; -fx-border-color: #e0e0e0; -fx-border-radius: 5;" text="Desencriptar" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="60.0" top="75.0" />
            </GridPane.margin>
        </JFXButton>
        <Text fontSmoothingType="LCD" mouseTransparent="true" strokeType="OUTSIDE" strokeWidth="0.0" text="Seja bem-vindo ao PVS Crypt" textAlignment="JUSTIFY" GridPane.columnIndex="1">
            <font>
                <Font name="Roboto Regular" size="16.0" />
            </font>
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </Text>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Escolha uma das opções a seguir:" GridPane.columnIndex="1">
            <GridPane.margin>
                <Insets top="70.0" />
            </GridPane.margin>
        </Text>
    </children>
</GridPane>